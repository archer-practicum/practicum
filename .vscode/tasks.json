{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ debug",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-Werror",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/platform/*.cpp",
                "-o",
                "${workspaceFolder}/debug/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ release",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-Werror",
                "-fdiagnostics-color=always",
                "-O3",
                "${workspaceFolder}/platform/*.cpp",
                "-o",
                "${workspaceFolder}/release/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "компилятор: /usr/bin/g++"
        }
    ],
    "version": "2.0.0"
}