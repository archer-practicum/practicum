{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ debug",
            "command": "/usr/bin/g++",
            "args": [
                "--std=c++17",
                "-Werror",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/platform/*.cpp",
                "-o",
                "${workspaceFolder}/debug/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "linux debug"
        },
        {
            "type": "cppbuild",
            "label": "windows C/C++: g++ debug",
            "command": "C:\\msys64\\mingw64\\bin\\g++",
            "args": [
                "--std=c++17",
                "-Werror",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/platform/*.cpp",
                "-o",
                "${workspaceFolder}/debug/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "windows debug"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ release",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-Werror",
                "-fdiagnostics-color=always",
                "-O3",
                "${workspaceFolder}/platform/*.cpp",
                "-o",
                "${workspaceFolder}/release/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "компилятор: /usr/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang debug",
            "command": "/usr/bin/clang++",
            "args": [
                "${workspaceFolder}/platform/*.cpp",
                "-std=c++17",
                "-Werror",
                "-o",
                "${workspaceFolder}/debug/main",
                "-fsanitize=address",
                "-g",
                "-O1"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "clang debug."
        }
    ],
    "version": "2.0.0"
}